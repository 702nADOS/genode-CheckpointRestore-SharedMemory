#
# Build
#

build { core init drivers/timer test/rtcr_mc_checkpointer test/rtcr_mc_counter test/rtcr_mc_validator }

create_boot_directory

#
# Generate config
#

install_config {
<config>
	<parent-provides>
		<service name="PD"/>
		<service name="CPU"/>
		<service name="ROM"/>
		<service name="RAM"/>
		<service name="RM"/>
		<service name="LOG"/>
		<service name="IO_MEM"/>
		<service name="IO_PORT"/>
		<service name="IRQ"/>
	</parent-provides>
	<default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>
	<start name="timer">
		<resource name="RAM" quantum="1M"/>
		<provides><service name="Timer"/></provides>
	</start>
	<start name="rtcr_mc_checkpointer">
		<resource name="RAM" quantum="1G"/>
	</start>
</config>}

#
# Boot image
#

build_boot_image { core init timer rtcr_mc_checkpointer rtcr_mc_counter rtcr_mc_validator }

append qemu_args " -nographic "

run_genode_until "3 sheeps.*\n" 40
#run_genode_until forever
